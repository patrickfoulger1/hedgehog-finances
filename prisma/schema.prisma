generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String    
  email     String    @unique
  password  String?
  image String?
  watchlist Watchlist[] 
}

model Watchlist {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  stockSymbol  String
  addedAt   DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])

}
